<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_process_order"
    app:startDestination="@id/acceptOrderFragment">

    <fragment
        android:id="@+id/acceptOrderFragment"
        android:name="com.example.driverapp.views.order.AcceptOrderFragment"
        android:label="fragment_accept_order"
        tools:layout="@layout/fragment_accept_order" >
        <action
            android:id="@+id/action_acceptOrderFragment_to_reachDirectionFragment"
            app:destination="@id/reachDirectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/pickOrderFragment"
        android:name="com.example.driverapp.views.order.PickOrderFragment"
        android:label="fragment_pick_order"
        tools:layout="@layout/fragment_pick_order" >
        <action
            android:id="@+id/action_pickOrderFragment_to_reachDirectionFragment"
            app:destination="@id/reachDirectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/deliverOrderFragment"
        android:name="com.example.driverapp.views.order.DeliverOrderFragment"
        android:label="fragment_deliver_order"
        tools:layout="@layout/fragment_deliver_order" >
        <action
            android:id="@+id/action_deliverOrderFragment_to_tripDetailsFragment"
            app:destination="@id/tripDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/reachDirectionFragment"
        android:name="com.example.driverapp.views.order.ReachDirectionFragment"
        android:label="fragment_reach_direction"
        tools:layout="@layout/fragment_reach_direction" >
        <action
            android:id="@+id/action_reachDirectionFragment_to_pickOrderFragment"
            app:destination="@id/pickOrderFragment" />
        <action
            android:id="@+id/action_reachDirectionFragment_to_deliverOrderFragment"
            app:destination="@id/deliverOrderFragment" />
    </fragment>
    <fragment
        android:id="@+id/tripDetailsFragment"
        android:name="com.example.driverapp.views.order.TripDetailsFragment"
        android:label="fragment_trip_details"
        tools:layout="@layout/fragment_trip_details" />
</navigation>