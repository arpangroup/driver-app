<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="order"
            type="com.pureeats.driverapp.models.Order" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_reach_restaurant" />

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_above="@+id/btnAccept">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- RestaurantDetails-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:paddingTop="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/green"
                                android:text="Customer details" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-2dp"
                                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                                app:tint="@color/green" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/callToCustomer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:paddingLeft="12dp"
                                    android:paddingRight="12dp"
                                    android:paddingTop="8dp"
                                    android:paddingBottom="8dp"
                                    android:background="@drawable/rectangle_gray_border"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/blue"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:text="Call" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textAlignment="center"
                                        android:src="@drawable/ic_baseline_add_ic_call_24"
                                        app:tint="@color/blue" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    android:text="@{order.user.name}"
                                    android:hint="Placeholder Customer name" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layoutDirection="ltr"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLines="2"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:text="@{order.address}"
                                    android:hint="Placeholder Customer Address" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:alpha="0.9"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/lightsilver" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layoutDirection="rtl"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/earningToday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="16dp"
                                android:layoutDirection="ltr"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="24sp"
                                android:text="@{order.paymentMode == `COD` ? `₹ `+order.total : `prepaid` }"
                                android:hint="₹ 377" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:layout_gravity="center"
                                android:layoutDirection="ltr"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:text="@{order.restaurant.name}"
                                android:hint="Placeholder Restaurant Name" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/toggle_items"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/green"
                                android:text="@{order.orderitems.size() + `items` }"
                                android:hint="2 items" />

                            <ImageView
                                android:id="@+id/img_toggle_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-2dp"
                                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                                app:tint="@color/green" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/dish_recycler"
                        android:layout_below="@+id/toolbar"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:setDishes="@{order.orderitems}"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_dish"  />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="#32AFAFAF"
                        android:padding="16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/colorPrimary" />

                            <RadioButton
                                android:id="@+id/radio_confirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="false" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:layout_alignParentTop="true"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:text="Message Customer" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_centerInParent="true"
                                android:padding="8dp"
                                android:background="@drawable/rectangle_gray_border"
                                android:layoutDirection="rtl"
                                android:orientation="horizontal">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:id="@+id/send_message"
                                        android:visibility="visible"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:paddingLeft="12dp"
                                        android:paddingRight="12dp"
                                        android:paddingTop="8dp"
                                        android:paddingBottom="8dp"
                                        android:background="@drawable/background_green"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/white"
                                            android:textSize="24sp"
                                            android:textStyle="bold"
                                            android:text="Send" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginRight="16dp"
                                            android:textAlignment="center"
                                            android:src="@drawable/ic_baseline_message_24"
                                            app:tint="@color/white" />
                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/message_send_success"
                                        android:visibility="gone"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_marginRight="16dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_verified_green"
                                        app:tint="@color/green" />
                                </FrameLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="@color/silver"
                                    android:text="I have reached the door\nPlease collect your order" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_gravity="bottom"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:text="@{`Handover ` + order.orderitems.size() + ` items to Customer`}"
                                android:hint="Handover 2 items to Customer" />
                            <Button
                                android:id="@+id/btn_item_given_to_customer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:layout_marginTop="16dp"
                                android:padding="16dp"
                                android:textColor="@color/white"
                                android:background="@drawable/background_green"
                                android:text="Given item to Customer"/>

                        </LinearLayout>


                    </LinearLayout>





                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <com.ncorti.slidetoact.SlideToActView
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:elevation="6dp"
                app:area_margin="4dp"
                app:animation_duration="250"
                app:outer_color="@color/gray"
                app:inner_color="@color/white"
                app:slider_icon="@drawable/slidetoact_ic_arrow"
                app:slider_icon_color="@color/blue"
                app:border_radius="30dp"
                app:text="Finish above task and deliver order"
                app:text_style="bold"
                app:text_size="16sp"
                app:slider_height="60dp"
                app:slider_locked="false" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </RelativeLayout>
</layout>