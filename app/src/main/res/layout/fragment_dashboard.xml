<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="dashboard"
            type="com.pureeats.driverapp.models.response.Dashboard" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.DashboardFragment">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_above="@id/snackbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="@color/white"
            android:clipToPadding="false"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layoutDirection="ltr"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16.7dp"
                                android:fontFamily="@font/sfpro_display_bold"
                                android:letterSpacing="0.0525"
                                android:text="See more"
                                android:textAlignment="textEnd"
                                android:textColor="#0B8EF6"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_baseline_arrow_right_24"
                                app:tint="#0B8EF6" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:fontFamily="@font/sfpro_display_bold"
                            android:letterSpacing="0.0525"
                            android:text="Delivered Orders"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginRight="8dp"
                        android:elevation="0dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#0B8EF6"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="8dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Today"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/earningToday"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="₹ 377"
                                        text="@{`₹` + dashboard.todaysEarningAmount}"
                                        android:textColor="@color/white"
                                        android:textSize="24sp"

                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/today_total_order"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="2 orders"
                                        text="@{dashboard.todaysOrderCount + ` orders`}"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="normal" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="8dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Yesterday"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/earningYesterday"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="₹ 1255"
                                        text="@{`₹` + dashboard.yesterdayEarningAmount}"
                                        android:textColor="@color/white"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/yesterday_total_order"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="9 orders"
                                        text="@{dashboard.yesterdayOrder_Count + ` orders`}"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="normal" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="8dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="This week"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/earningWeekly"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="₹ 9,418"
                                        text="@{`₹` + dashboard.thisWeekEarningAmount}"
                                        android:textColor="@color/white"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/weekly_total_order"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="36 orders"
                                        text="@{dashboard.thisMonthOrderCount + ` orders`}"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="normal" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingLeft="16dp"
                                    android:paddingTop="8dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="This month"
                                        android:textColor="@color/white"
                                        android:textSize="12sp"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/earningMonthly"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="₹ 1,69849"
                                        text="@{`₹` + dashboard.thisMonthEarningAmount}"
                                        android:textColor="@color/white"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/monthly_total_order"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="580 orders"
                                        text="@{dashboard.thisMonthOrderCount + ` orders`}"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="normal" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/viewline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"></com.github.mikephil.charting.charts.BarChart>
                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <RelativeLayout
            android:id="@+id/snackbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/orange"
                app:cardCornerRadius="4dp"
                android:layout_margin="5dp"
                app:cardElevation="1dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/snackbar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ongoing orders"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/white"
                            style="@style/TextAppearance.AppCompat.Body2" />

                        <TextView
                            android:id="@+id/snackbar_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 orders yet to be delivered"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@android:color/white"
                            style="@style/TextAppearance.AppCompat.Body1" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:background="@android:color/darker_gray" />

                    <Button
                        android:id="@+id/btn_snackbar_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transferent"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:text="VIEW"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </RelativeLayout>
</layout>